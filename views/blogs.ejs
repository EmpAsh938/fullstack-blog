<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>
    <section>
      <div class="blogs">
        <h3>All blogs</h3>
        <% if (blogs.length > 0) { blogs.forEach(item => { %>
        <a href="/blogs/<%= item._id %>">
          <h3><%= item.title %></h3>
          <p><%= item.snippet %></p>
        </a>
        <% })} else { %>
        <p>No blogs to display.</p>
        <% } %>
      </div>
    </section>
  </body>
</html>
